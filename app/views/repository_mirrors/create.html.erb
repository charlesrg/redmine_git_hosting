<% if not @is_xhr %><h2><%=l(:label_mirror_create)%></h2><% end %>
<% labelled_form_for :repository_mirrors, @mirror,
  :url => { :controller => 'repository_mirrors', :action => 'create', :project_id => @project, :id => @mirror.id },
  :html => {:method => :post, :class => 'tabular'} do |f| %>
<%= render :partial => 'form', :locals => { :f => f } %>
<%= submit_tag l(:button_save) %>
<% end %>
